CREATE DATABASE `runningRecordProject`;

USE `runningRecordProject`;

CREATE TABLE `user` (
	`id` int UNSIGNED NOT NULL PRIMARY KEY,
	`userId` char(20) NOT NULL,
	`password` char(20) NOT NULL,
	`name` char(20) NOT NULL,
	`weight` double UNSIGNED NOT NULL,
	`showWhenSearch` int NOT NULL,
	`showMyRecord` int NOT NULL,
	`createDate` datetime NOT NULL,
	`modifiedDate` datetime NOT NULL
);

CREATE TABLE `record` (
	`id` int UNSIGNED NOT NULL PRIMARY KEY,
	`userId` char(20) NOT NULL,
	`startTime` datetime NOT NULL,
	`endTime` datetime NOT NULL,
	`runDistance` double UNSIGNED NOT NULL,
	`runTime` datetime NOT NULL,
	`calorie` double UNSIGNED NOT NULL,
	`createDate` datetime NOT NULL,
	`modifiedTime` datetime NOT NULL
);

CREATE TABLE `achive` (
	`id` int UNSIGNED NOT NULL PRIMARY KEY,
	`userId` int UNSIGNED NOT NULL,
	`distance` double UNSIGNED NOT NULL,
	`time` datetime NOT NULL,
	`calorie` double UNSIGNED NOT NULL,
	`weight` double UNSIGNED NOT NULL,
	`isDistance` int NOT NULL,
	`isTime` int NOT NULL,
	`isCalorie` int NOT NULL,
	`isWeight` int NOT NULL,
	`createDate` datetime NOT NULL,
	`modifiedDate` datetime NOT NULL
);

CREATE TABLE `follow` (
	`id` int UNSIGNED NOT NULL PRIMARY KEY,
	`userId` int UNSIGNED NOT NULL,
	`followId` int UNSIGNED NOT NULL,
	`createDate` datetime NOT NULL,
	`modifiedDate` datetime NOT NULL
);

SHOW tables;

DESC USER;
DESC record;
DESC achive;
DESC follow;